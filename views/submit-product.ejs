<div class="px-4 py-5 text-center">
  <h1 class="display-5 fw-bold">Submit Your Product</h1>
</div>

<div class="row justify-content-center">

  <% if(infoSubmitObj != '') { %>
    <div class="col-8 alert alert-success" role="alert">
      <%= infoSubmitObj %>
    </div>
  <% } %>

  <% if(infoErrorsObj != '') { %>
    <div class="col-8 alert alert-danger" role="alert">
      <%= infoErrorsObj[0].message %>
    </div>
  <% } %>

  <div class="col-8">

    <form action="/vendor/submit-product" enctype="multipart/form-data" method="POST">
    
      <div class="row g-3">
        <div class="col-12">
          <label for="name" class="form-label">Product Name</label>
          <input type="text" name="name" id="name" class="form-control" required>
        </div>

        <div class="col-12">
          <label for="price" class="form-label fs-5">Price</label> $
          <input type="number" name="price" id="price" class="form-control bg-light" required>
        </div>

        <div class="col-12">
          <label for="description" class="form-label fs-5">Description</label>
          <textarea name="description" id="description" class="form-control bg-light" cols="30" rows="4"></textarea>
        </div>

        <div class="col-12">
          <label for="name" class="form-label fs-5">Product Notes</label><br>
          <small class="fs-6 fw-light">Example: Blue color</small>
          <div class="noteList">
            <div class="ingredeintDiv mb-1">
              <input type="text" name="productNotes" class="form-control bg-light">
            </div>
          </div>
        </div>

        <div class="col-12">
          <button type="button" class="btn btn-outline-dark" id="addProductNotesBtn">+ Note</button>
        </div>

        <div class="col-12">
          <label for="category fs-5">Select Category</label>
          <select class="form-select form-control bg-light" name="category" aria-label="Category">
            <option selected>Select Category</option>
            <option value="Tablet">Tablet</option>
            <option value="Laptop">Laptop</option>
            <option value="Phone">Phone</option>
            <option value="Sound">Sound</option>
            <option value="Keyboard">Keyboard</option>
          </select>
        </div>

        <div class="col-12">
          <label for="image fs-5">Product Image</label>
          <input type="file" class="form-control bg-light" name="image" accept="image/*">
        </div>

        <div class="col-12 text-center">
          <button type="submit" class="btn btn-primary px-2 py-3 fs-5 mb-5">Submit Product</button>
        </div>
      </div>
    </form>

  </div>
</div>
<script src="/js/addMoreNotes.js"></script>